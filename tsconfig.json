{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve"
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["dist", "node_modules"]
}
